@model DAboneTakip.Models.Admin
@{
    ViewData["Title"] = "Giris Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="~/css/login.css" rel="stylesheet" />


<div class="container logindiv">
    <br />
    <h2>@ViewData["Title"]</h2>
    <div class="eklediv">
        <section>
            <form asp-action="GirisYap" method="post" class="form-group">

                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="KullaniciAD" class="form-control" placeholder="Kullanıcı Adı" autofocus="" />
                    @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    @*<label asp-for="Input.Password">Şifre</label>*@
                    <input asp-for="Sifre" class="form-control" placeholder="Şifre" type="password" />
                    @* <span asp-validation-for="Input.Password" class="text-danger"></span>*@
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary border-0 btn-outline-info" style="width:100%; background-color:rgb(0, 150, 136)">Giriş Yap </button>
                </div>

            </form>
        </section>
    </div>
    
        <a asp-action="KayitOl">Kayit Ol</a>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}