

<script>
    $(document).ready(function () {
            $.ajax({
                type: "GET",
                dataType: "json",
                contentType: "application/json",
                url: '@Url.Action("VDergiChart", "Home")',
                success: function (result2) {
                    google.charts.load('current', {
                        'packages': ['corechart']
                    });
                    google.charts.setOnLoadCallback(function () {
                        drawChart2(result2);
                    });
                }
            });
    });

    function drawChart2(result2) {
        var data2 = new google.visualization.DataTable();
        data2.addColumn('string', 'Dergi');
        data2.addColumn('number', 'Abone Sayısı');
        var dataArray2 = [];

        $.each(result2, function (i, obj2) {
            dataArray2.push([obj2.dergi, obj2.abonesayi]);
        });
        data2.addRows(dataArray2);

        var columnChartOptions2 = {
            title: "Dergi - Abone Sayısı Grafiği",
            width: 1000,
            height: 400,
            bar: { groupWidth: "20%" },
        };

        var columnChart2 = new google.visualization.PieChart(document.getElementById('Piechart_div2'));

        columnChart2.draw(data2, columnChartOptions2);
    }


</script>


<div id="Piechart_div2"></div>
