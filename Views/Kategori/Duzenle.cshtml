@model DergiAboneProje.Models.Kategoriler

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <form class="form-group" method="post" id="myForm">
        <h4>Kategori ID: @Model.KategoriID</h4> @*Kategori ID Labeli*@
        <input asp-for="KategoriID" class="form-control" type="text" maxlength="30" readonly="readonly" style="display:none"/>  @*Kategori ID textboxı gizli tutuluyor*@
        <br />
        <h4>Kategori Adı</h4>
        <input asp-for="KategoriAD" class="form-control" type="text" maxlength="30" />
    </form>
    <br />
    <button class="btn btn-info" onclick="SubmitCheck();">Düzenlemeyi Kaydet</button>
</div>


<script>
    function SubmitCheck() {
        var KategoriAD = $('#KategoriAD').val();

        if (KategoriAD == "" || KategoriAD == undefined) {
            swal("Uyarı", "Kategori adı boş bırakılamaz!", "error")
            return false;
        }
        else {
            document.getElementById("myForm").submit();
            swal({
                title: "Kategori düzenleme başarılı!",
                icon: "success",
                button: "Tamam",
            }).then(value => {
                window.location.href = "/Kategori/Liste/";            
            });
            return true;
        }
    }
        $(document).ready(function () {
            $("#KategoriAD").keydown(function (event) {
                var inputValue = event.which;
                // sayı girişi engellenmesi
                if (!(inputValue >= 65 && inputValue <= 92) && (inputValue != 8 && inputValue != 32 && inputValue != 191 && inputValue != 220 && inputValue != 222 && inputValue != 186 && inputValue != 221 && inputValue != 219 && inputValue != 9)) {
                    event.preventDefault();

                }
            });
        });
</script>