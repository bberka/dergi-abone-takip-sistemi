@using DergiAboneProje.Models
@model List<Abonelikler>
@{
    ViewData["Title"] = "Pasif Abonelikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>

    <br />
    <script>
        $(document).ready(function () {
            $('#AbonelikTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>

    <div>
        <table id="AbonelikTable" class="row-border stripe hover table-bordered">
            <thead>
                <tr>
                    <th>Abonelik ID</th>
                    <th>Kayıt Tarihi</th>
                    <th>Gün Önce Bitti</th>
                    <th>Üye ID</th>
                    <th>Üye Adı</th>
                    <th>Dergi ID</th>
                    <th>Dergi Adı</th>
                </tr>
            </thead>

            @foreach (var x in Model)
            {
                if ((x.KayıtTarihi.AddDays(x.KayıtSuresi * 30) - DateTime.Now).Days >= 0)
                {
                    continue;
                }
                <tr>
                    <td>@x.KayıtID</td>
                    <td>@x.KayıtTarihi.ToShortDateString()</td>
                    <td>@(Math.Abs((x.KayıtTarihi.AddDays(x.KayıtSuresi* 30) - DateTime.Now).Days))</td>
                    <td>@x.UyeID</td>
                    <td>@x.Uye.UyeAD</td>
                    <td>@x.DergiID</td>
                    <td>@x.Dergi.DergiAD</td>
                </tr>
            }

        </table>
    </div>

</div>


