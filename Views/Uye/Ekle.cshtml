@model DergiAboneProje.Models.Uyeler
@{
    ViewData["Title"] = "Üye Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Ekle">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UyeAD"></label>
                <input asp-for="UyeAD" class="form-control" maxlength="50" />
                @*<span asp-validation-for="DergiAD" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                @*<span asp-validation-for="DergiAD" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TelNo"></label>
                <input asp-for="TelNo"class="form-control" type="text" maxlength="10"/>
                @*<span asp-validation-for="DergiAD" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Tarih"></label>
                <input asp-for="Tarih" type="text"  class="form-control"  maxlength="10" id="TarihSec" />
                @*<span asp-validation-for="DergiAD" class="text-danger"></span>*@
            </div>
            <button class="btn btn-success" type="submit">Üye Ekle</button>
        </form>

    </div>
</div>

<br />
<div>
    <a asp-action="Liste">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
    <script type="text/javascript" src="js/moment/tr.js"></script>
    <script>

        var today = new Date();
        var date = (today.getMonth() + 1) + '/' +  today.getDate() + '/' + (today.getFullYear() - 18); 
        $('#TarihSec').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            language: "tr",
            weekStart: 1,
            endDate: date,
            startDate: '01/01/1900'
        });

    </script>


}