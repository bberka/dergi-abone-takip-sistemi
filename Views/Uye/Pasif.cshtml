@using DergiAboneProje.Models
@model List<Abonelikler>
@{
    ViewData["Title"] = ViewBag.uyead + " Adlı Üyenin Pasif Abonelik Listesi || Üye ID: " + ViewBag.uyeid;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div>

    <br />
    <script>
        $(document).ready(function () {
            $('#AbonelikTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            });
        });
    </script>

    <div>
        <table id="AbonelikTable" class="row-border stripe hover table-bordered">
            <thead>
                <tr>
                    <th>Abonelik ID</th>
                    <th>Kayıt Tarihi</th>
                    <th>Gün Önce Bitti</th>
                    <th>Dergi ID</th>
                    <th>Dergi Adı</th>
                </tr>
            </thead>

            @foreach (var x in Model)
            {
                if ((x.KayıtTarihi.AddDays(x.KayıtSuresi * 30) - DateTime.Now).Days >= 0)
                {
                    continue;
                }
                <tr>
                    <td>@x.KayıtID</td>
                    <td>@x.KayıtTarihi.ToShortDateString()</td>
                    <td>@(Math.Abs((x.KayıtTarihi.AddDays(x.KayıtSuresi* 30) - DateTime.Now).Days))</td>
                    <td>@x.DergiID</td>
                    <td>@x.Dergi.DergiAD</td>
                </tr>
            }

        </table>
    </div>
    <a href="/Uye/Detay/@ViewBag.uyeid" class="btn btn-info">Aktif Abonelikleri Listele</a>
</div>


