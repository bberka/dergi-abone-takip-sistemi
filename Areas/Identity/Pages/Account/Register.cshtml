@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/css/login.css" rel="stylesheet" />
<div class="container logindiv" >
    <br />
    <h2>Yeni Hesap Oluştur</h2>
    <hr />
    <div class="eklediv">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Input.Email">Email Adres</label>*@
                <input asp-for="Input.Email" class="form-control" placeholder="Email Adresi" />
                @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Input.Password">Şifre</label>*@
                <input asp-for="Input.Password" class="form-control" placeholder="Şifre" />
                @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @* <label asp-for="Input.ConfirmPassword">Şifre Tekrar</label>*@
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
               @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
            </div>
            <button type="submit" class="btn btn-primary border-0 btn-outline-info" style="width:100%;background-color:rgb(0, 150, 136)">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
