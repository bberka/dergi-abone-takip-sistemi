@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Input.OldPassword">Geçerli Şifre</label>*@
                <input asp-for="Input.OldPassword" class="form-control" placeholder="Geçerli Şifre"/>
               @* <span asp-validation-for="Input.OldPassword" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @*<label asp-for="Input.NewPassword">Yeni Şifre</label>*@
                <input asp-for="Input.NewPassword" class="form-control" placeholder="Yeni Şifre" />
                @*<span asp-validation-for="Input.NewPassword" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <!--<label asp-for="Input.ConfirmPassword">-->@*Yeni Şifre Tekrar*@<!--</label>-->
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Yeni Şifre Tekrar"/>
                @*<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%">Şifreyi Değiştir</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}